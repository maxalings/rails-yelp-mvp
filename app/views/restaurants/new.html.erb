<h1 class="form-title">New Restaurant</h1>
<div class="form-container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'], prompt: 'Select a category' %>
    <%= f.input :phone_number %>
    <%= f.button :submit, 'Create Restaurant', class: 'btn btn-primary' %>
  <% end %>
</div>
